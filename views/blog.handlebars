{{#each post}}
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%= post.image %> " />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p><h5 class="card-text"><%= post.description %></h5></p>
        <p class="card-text">
          <small class="text-muted"><%= post.location %> </small>
        </p>
        <a class="btn btn-primary" href="/blog/<%= post._id %> ">View <%= post.title %> </a>
      </div>
    </div>
  </div>
</div>
{{/each}}






