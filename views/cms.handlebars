<div class="row">
  <h1 class="text-center">New Post</h1>
  <div class="col-6 offset-3">
    <form id="cms">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          autocomplete="off"
          class="form-control"
          type="text"
          id="title"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Body</label>
        <textarea
          autocomplete="off"
          class="form-control"
          id="body"
        ></textarea>
      </div>
      <div class="form-group">
							<label for="category">Select Author:</label>
							<select class="custom-select" id="author">
  						</select>
						</div>
      <div class="mb-3">
        <button type="submit" class="btn btn-info submit">Add Post</button>
      </div>
    </form>
  </div>
</div>

<script src="/assets/js/cms.js" type="text/javascript"></script>
